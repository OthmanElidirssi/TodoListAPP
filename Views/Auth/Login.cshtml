
@{
}

@model LoginDTO


<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
      </div>
      
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

                @if (TempData.ContainsKey("successMessages"))
                {
                    if (TempData["successMessages"] is String[] success && success != null)
                    {
                        foreach (var message in success)
                        {
                                    <div class="alert alert-success">
                                        <p>@message</p>
                                    </div>
                        }
                    }
                }
                @if (TempData.ContainsKey("errorMessages"))
                {
                    if (TempData["errorMessages"] is  String[] errors && errors != null)
                    {
                        foreach (var message in errors)
                        {
                        <div class="alert alert-danger">
                            <p>@message</p>
                        </div>
                        }
                    }
                }
        <h2>Sign In</h2>
        <form method="post" asp-controller="Auth" asp-action="Login">
          <div class="form-outline mb-4">
                 
                 
            <input type="text"  class="form-control form-control-lg" asp-for="UserName" />
            <label class="form-label" for="form1Example13">UserName</label>
          </div>
          <div class="form-outline mb-4">
            <input type="password"  class="form-control form-control-lg" asp-for="Password" />
            <label class="form-label" for="form1Example23">Password</label>
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
        </form>
      </div>
    </div>
  </div>
</section>
