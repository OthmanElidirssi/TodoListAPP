
@{
}

@model User
<h2>Register</h2>
<form method="post" asp-controller="Auth" asp-action="Register"> 
    @if (TempData.ContainsKey("errorMessages"))
    {
        if (TempData["errorMessages"] is String[] errors && errors != null)
        {
            foreach (var message in errors)
            {
                                    <div class="alert alert-danger">
                                        <p>@message</p>
                                    </div>
            }
        }
    }
  <div class="row mb-4">
    <div class="col">
      <div data-mdb-input-init class="form-outline">
          <label class="form-label" for="form6Example1">First name</label>
        <input type="text" id="form6Example1" class="form-control" asp-for="FirstName"/>
      </div>
    </div>
    <div class="col">
      <div data-mdb-input-init class="form-outline">
        <label class="form-label" for="form6Example2">Last name</label>
        <input type="text" id="form6Example2" class="form-control" asp-for="LastName" />
      </div>
    </div>
  </div>

  <!-- Text input -->
  <div data-mdb-input-init class="form-outline mb-4">
    <label class="form-label" for="form6Example3">Username</label>
    <input type="text" id="form6Example3" class="form-control" asp-for="UserName" />
  </div>

  <div data-mdb-input-init class="form-outline mb-4">
     <label class="form-label" for="form6Example5">Email</label>
    <input type="email" id="form6Example5" class="form-control" asp-for="Email"/>
  </div>


  <div data-mdb-input-init class="form-outline mb-4">
    <label class="form-label" for="form6Example4">Password</label>
    <input type="password" id="form6Example4" class="form-control" asp-for="Password" />
  </div>
  <button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block mb-4">Create User</button>
</form>
